Package: CoDaImpact
Title: Tools for Interpreting CoDa Regression Models
Version: 0.1.0
Authors@R: c(
    person("Lukas", "Dargel", role = c("aut", "cre"),  email = "lukas.dargel@mailbox.org", comment = c(ORCID = "0000-0002-4839-506X")),
